  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
  <th><%= image_tag @book.user.get_profile_image(100, 100) %></th>
  <tr>
	  <th>name</th>
	  <th><%= @book.user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @book.user.introduction %></th>
  </tr>
</table>

<div class='row'>
  <%=link_to edit_user_path(@book.user),class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
</div>
      <h1>New book</h1>

     <%= form_with model: @new_book do |f| %>

 <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
</div>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table table-hover table-inverse'>

 <tbody>
     <tr>
     <td><%= link_to user_path(@book.user.id) do %></tb>

     <%= image_tag @book.user.get_profile_image(100, 100) %><br>
     <%= @book.user.name %>
     <% end %></td>
     <td><%= link_to @book.title,book_path(@book.id) %></td>
     <td><%= @book.body %></td>
      <% if @book.user == current_user %>
     <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "deta-confirm" => "本当に削除しますか？" %></td>
      <% end %>
      </tr>

  </tbody>
</table>
